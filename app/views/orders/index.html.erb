<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Token</th>
      <th>Transaction</th>
      <th>Address one</th>
      <th>Address two</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Country</th>
      <th>Status</th>
      <th>Number</th>
      <th>Uuid</th>
      <th>Uder</th>
      <th>Price</th>
      <th>Shipping</th>
      <th>Tracking number</th>
      <th>Phone</th>
      <th>Name</th>
      <th>Expiration</th>
      <th>Payment option</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.token %></td>
        <td><%= order.transaction_id %></td>
        <td><%= order.address_one %></td>
        <td><%= order.address_two %></td>
        <td><%= order.city %></td>
        <td><%= order.state %></td>
        <td><%= order.zip %></td>
        <td><%= order.country %></td>
        <td><%= order.status %></td>
        <td><%= order.number %></td>
        <td><%= order.uuid %></td>
        <td><%= order.uder_id %></td>
        <td><%= order.price %></td>
        <td><%= order.shipping %></td>
        <td><%= order.tracking_number %></td>
        <td><%= order.phone %></td>
        <td><%= order.name %></td>
        <td><%= order.expiration %></td>
        <td><%= order.payment_option_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

