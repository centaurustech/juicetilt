<div class="row" id="show_heading">
	<div class="col-md-offset-3 col-md-6">
		<strong><h2><%= @campaign.project_title %></h2></strong>
        <h4>By <%= @campaign.user.name if @campaign.user %></h4>
    </div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading" id="show_panel_heading">
				<div class="row">
					<div class="col-xs-8 pagination-centered">
							<%= @campaign.video_url_html %>
					</div>
					<div class="col-xs-4" id="show_sidebar">
							<strong><h1>100</h2></strong>
							backers<br>
							<strong><h1>$2,020</h2></strong>
							pledged of $<%= @campaign.funding_goal %> goal<br>
							<strong><h1><%= time_ago_in_words(Time.now - 15.days) %></h2></strong>
							days to go<br><br>
							<div class="progress">
							    <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
								<span class="sr-only">20% Complete</span>
								</div>
							</div>
							<p>
								<%= link_to "Back This Campaign", new_order_path, class: "btn btn-primary btn-lg" %>
							</p>
					</div>
				</div>
			</div>

			<div class="panel-body" id="show_panel_body">
				<div class="row">
					<div class="col-xs-8 body_desc">
						<p>
							<%= simple_format(@campaign.description) %><br/>
						</p>
						<% if @campaign.user == current_user %>
							<%= link_to 'Edit', edit_campaign_path(@campaign) %> |
						<% end %>
						<%= link_to 'Back', campaigns_path %>
					</div>
					<div class="col-xs-4" id="show_sidebar" >
						<div class="well blue">
							Project by <%= @campaign.user.name if @campaign.user %><br>
							First created <%= @campaign.created_at %><br>
							<%= @campaign.user.email %><br>
							Twitter | Facebook
						</div>
						<hr>
						<% if @perks.present? %>
							<% @perks.each do |perk| %>
								<div class="well">
									<b>Pledge $<%= perk.amount %></b><br>
									<h3><%= perk.name %></h3><br>
									<p><%= perk.description %></p><br>
								</div>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


