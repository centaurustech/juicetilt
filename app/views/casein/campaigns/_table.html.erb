<!-- Scaffolding generated by Casein v5.0.0.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "User", :user_id %></th>
			<th><%= casein_sort_link "Created at", :created_at %></th>
			<th><%= casein_sort_link "Project title", :project_title %></th>
			<th><%= casein_sort_link "Funding duration", :funding_duration %></th>
			<th><%= casein_sort_link "Funding goal", :funding_goal %></th>
			<th><%= casein_sort_link "Legal first name", :legal_first_name %></th>
			<th><%= casein_sort_link "Legal last name", :legal_last_name %></th>
			<th><%= casein_sort_link "Phone number", :phone_number %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% campaigns.each do |campaign| %>
		<tr>
			<td><%= casein_table_cell_link campaign.user.email, casein_campaign_path(campaign) %></td>
			<td><%= casein_table_cell_link campaign.created_at, casein_campaign_path(campaign) %></td>
			<td><%= casein_table_cell_link campaign.project_title, casein_campaign_path(campaign) %></td>
			<td><%= casein_table_cell_link campaign.funding_duration, casein_campaign_path(campaign) %></td>
			<td><%= casein_table_cell_link campaign.funding_goal, casein_campaign_path(campaign) %></td>
			<td><%= casein_table_cell_link campaign.legal_first_name, casein_campaign_path(campaign) %></td>
			<td><%= casein_table_cell_link campaign.legal_last_name, casein_campaign_path(campaign) %></td>
			<td><%= casein_table_cell_link campaign.phone_number, casein_campaign_path(campaign) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_campaign_path(campaign), :method => :delete, :data => { :confirm => "Are you sure you want to delete this campaign?" }) %>
			</td>
		</tr>
	<% end %>
</table>