<h1>Listing payment_options</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Amount display</th>
      <th>Description</th>
      <th>Shipping desc</th>
      <th>Delivery desc</th>
      <th>Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_options.each do |payment_option| %>
      <tr>
        <td><%= payment_option.amount %></td>
        <td><%= payment_option.amount_display %></td>
        <td><%= payment_option.description %></td>
        <td><%= payment_option.shipping_desc %></td>
        <td><%= payment_option.delivery_desc %></td>
        <td><%= payment_option.limit %></td>
        <td><%= link_to 'Show', payment_option %></td>
        <td><%= link_to 'Edit', edit_payment_option_path(payment_option) %></td>
        <td><%= link_to 'Destroy', payment_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

